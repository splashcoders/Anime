intro = str(len(secretWord))
    mistakesMade = 8
    lettersGuessed = []
    guess = str
    availableLetters = str(getAvailableLetters(lettersGuessed))
    
    print 'Welcome to the game, Hangman!'
    print ('I am thinking of a word that is ') + intro + (' letters long.')

    if mistakesMade >= 0:
        print ('You have ') + str(mistakesMade) + (' guesses left.')
        print ('Available letters: ') + availableLetters
        guess = raw_input('Please guess a letter:')
        guessLowerCase = guess.lower()
        lettersGuessed.append(guessLowerCase)

        if isWordGuessed(secretWord, lettersGuessed) == False:
            #print(guessLowerCase + secretWord)
            if guessLowerCase in secretWord:
                #print True
                print('You have ' + str(mistakesMade) + ' guesses left.')
                print ('Available letters: ') + availableLetters
            else:
                #print False
                mistakesMade -= 1
                print('You have ' + str(mistakesMade) + ' guesses left.')
                print ('Available letters: ') + availableLetters
                
